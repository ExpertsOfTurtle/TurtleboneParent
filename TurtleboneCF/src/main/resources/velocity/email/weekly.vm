<html>
	<head>
		<style>
		/* Table Head */
		table thead th {
		background-color: rgb(81, 130, 187);
		color: #fff;
		border-bottom-width: 0;
		}
		
		/* Column Style */
		table td {
		color: #000;
		}
		/* Heading and Column Style */
		table tr, table th {
		border-width: 1px;
		border-style: solid;
		border-color: rgb(81, 130, 187);
		}
		
		/* Padding and font style */
		table td, table th {
		padding: 5px 10px;
		font-size: 12px;
		font-family: Verdana;
		font-weight: bold;
		}
		</style>
	</head>
	<body>
		<p>上周統計</p>
		<p>from $!{from} to ${to}</p>
		<hr>
		<div>
			#foreach($userObj in ${weeklySummary.list})
				<h2>${userObj.username}</h2>
				<p>做題數:${userObj.problemSolved}</p>
				<p>天数：${userObj.daySolved}</p>
				<table>
					<thead>
						<th width="5%">id</th>
						<th width="8%">Problem</th>
						<th width="10%">Result</th>
						<th width="25%">Time</th>
						<th>Tags</th>
					</thead>
					<tbody>
						#foreach($item in $userObj.submission)
						<tr>
							<td>
								<a href="http://codeforces.com/contest/$!{item.contestid}/submission/$!{item.id}">$!{item.id}</a>
							</td>
							<td>
								<a href="http://codeforces.com/problemset/problem/$!{item.contestid}/$!{item.problemindex}">$!{item.contestid}$!{item.problemindex}</a>
							</td>
							<td>$!{item.result}</td>
							<td>$!{item.submittime}</td>
							<td>$!{item.tags}</td>
						</tr>
						#end
					</tbody>
				</table>
				
				<hr>
			#end
		</div>
	</body>
</html>